{
  "name": "l3tum/riaf-core",
  "description": "Good framework",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "L3tum"
    }
  ],
  "bin": [
    "bin/compile"
  ],
  "require": {
    "php": ">=8.0",
    "psr/http-server-handler": "^1.0",
    "psr/http-server-middleware": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/http-message": "^1.0",
    "psr/container": "^2.0",
    "psr/event-dispatcher": "^1.0",
    "psr/log": "^1.0 || ^2.0 || ^3.0",
    "nyholm/psr7-server": "^1.0"
  },
  "require-dev": {
    "ext-xdebug": "*",
    "roave/security-advisories": "dev-latest",
    "vimeo/psalm": "^4.9",
    "jetbrains/phpstorm-attributes": "^1.0",
    "phpstan/phpstan": "^0.12",
    "phpunit/phpunit": "^9",
    "nyholm/psr7": "^1.4",
    "league/event": "^3.0",
    "infection/infection": "^0.24",
    "monolog/monolog": "^2.3"
  },
  "autoload": {
    "psr-4": {
      "Riaf\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Riaf\\": "tests/"
    }
  },
  "scripts": {
    "psalm": "vendor/bin/psalm --show-info=true --no-diff --threads=16",
    "phpstan": "vendor/bin/phpstan analyze -l 7 src",
    "test": "vendor/bin/phpunit --bootstrap vendor/autoload.php --testdox tests",
    "phpunit": "XDEBUG_MODE=coverage vendor/bin/phpunit --bootstrap vendor/autoload.php --testdox --coverage-text tests",
    "phpcs": "tools/php-cs-fixer/vendor/bin/php-cs-fixer fix",
    "infection": "XDEBUG_MODE=coverage vendor/bin/infection --show-mutations --only-covered",
    "post-install-cmd": "@install-tools",
    "post-update-cmd": "@update-tools",
    "install-tools": "cd tools/php-cs-fixer && composer install",
    "update-tools": "cd tools/php-cs-fixer && composer update",
    "compile": "bin/compile \"\\Riaf\\Compiler\\SampleCompilerConfiguration\" --debug"
  }
}
