<phpunit
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/6.3/phpunit.xsd"
        backupGlobals="true"
        cacheTokens="false"
        colors="true">
    <filter>
        <whitelist>
            <directory>./lib</directory>
        </whitelist>
    </filter>
    <testsuite name="lib">
        <directory>./tests</directory>
    </testsuite>
</phpunit>
